---
import { MagneticLink } from "./MagneticLink";

export const navItems = {
  "/portfolio": { name: "Home" },
  "/portfolio/blog": { name: "Blog" },
  "/portfolio/projects": { name: "Projects" },
  "/portfolio/about": { name: "About" },
};
---

<header class="mb-20">
  <nav>
    <aside
      class="flex items-center justify-end flex-col sm:flex-row gap-y-2 sm:gap-y-0"
    >
      <nav class="flex gap-3 flex-wrap">
        {
          Object.entries(navItems).map(([path, { name }]) => {
            return (
              <MagneticLink href={path} client:load>
                {name}
              </MagneticLink>
            );
          })
        }
      </nav>
    </aside>
  </nav>
</header>
