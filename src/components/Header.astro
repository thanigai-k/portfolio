---
import HeaderLink from "./HeaderLink.astro";

export const navItems = {
  "/blog": { name: "Blog" },
  "/projects": { name: "Projects" },
  "/about": { name: "About" },
};
---

<header class="mb-10">
  <nav>
    <aside
      class="flex flex-col gap-y-1 md:flex-row md:items-center md:justify-between"
    >
      <a href="/" class="text-3xl font-bold"> Thanigai </a>
      <nav class="flex gap-3 flex-wrap">
        {
          Object.entries(navItems).map(([path, { name }]) => {
            return <HeaderLink href={path}>{name}</HeaderLink>;
          })
        }
      </nav>
    </aside>
  </nav>
</header>
