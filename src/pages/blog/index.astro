---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="mb-10">
      <h1 class="text-3xl font-medium mb-4">Blog</h1>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li class="mb-4 relative group flex justify-between items-center">
                <div>
                  <h3>
                    <a
                      href={`/blog/${post.id}/`}
                      class="after:absolute after:inset-0 no-underline group-hover:underline"
                    >
                      {post.data.title}
                    </a>
                  </h3>
                  <p class="text-secondary">{post.data.excerpt}</p>
                </div>
                <time
                  datetime={post.data.pubDate.toISOString()}
                  class="text-sm text-secondary"
                >
                  {post.data.pubDate.toLocaleDateString("en-us", {
                    year: "numeric",
                    month: "short",
                  })}
                </time>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
