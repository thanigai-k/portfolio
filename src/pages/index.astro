---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import WorkExperience from "../components/home/WorkExperience.astro";
import Stack from "../layouts/Stack.astro";

const blogPosts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const projectPosts = (await getCollection("projects")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const BLOG_POSTS_LIMIT = 4;
const PROJECT_POSTS_LIMIT = 2;

const recentBlogPosts = blogPosts.slice(0, BLOG_POSTS_LIMIT);
const recentProjectPosts = projectPosts.slice(0, PROJECT_POSTS_LIMIT);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <Stack class="gap-16">
      <section class="group">
        <h1 class="text-3xl font-medium mb-4">
          Hey there! I'm Thanigai
          <span class="group-hover:animate-wave-hands inline-block">ðŸ‘‹</span>
        </h1>
        <Stack class="gap-y-2">
          <p>
            I'm a Frontend Engineer who design systems that make product teams
            move faster â€” without breaking accessibility, performance, or
            flexibility
          </p>
          <p>
            I'm a Frontend Engineer who design systems that make product teams
            move faster â€” without breaking accessibility, performance, or
            flexibility
          </p>
        </Stack>
      </section>
      <section>
        <h2 class="text-2xl font-medium mb-4">Currently</h2>
        <Stack class="gap-y-2">
          <p>
            I'm maintaining the <a
              href="https://earth.anywhere.co/"
              target="_blank"
              rel="noopener noreferrer">Earth Design System</a
            >, used across multiple teams. I've improved accessibility and added
            CI for visual and a11y testing.
          </p>
          <p>
            I also built a Style API for easy customization and run workshops to
            support adoption and contribution.
          </p>
        </Stack>
      </section>
      <section>
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-medium">Thoughts, Ideas and Writings</h2>
          <a href="/blog" class="text-secondary">View all</a>
        </div>
        <ul>
          {
            recentBlogPosts.map((post) => (
              <li class="mb-4 relative group">
                <h3>
                  <a
                    href={`/blog/${post.id}/`}
                    class="after:absolute after:inset-0 no-underline group-hover:underline"
                  >
                    {post.data.title}
                  </a>
                </h3>
                <p class="text-secondary">{post.data.description}</p>
              </li>
            ))
          }
        </ul>
      </section>
      <section>
        <div>
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-2xl font-medium">Selected Projects</h2>
            <a href="/projects" class="text-secondary">View all</a>
          </div>
          <div>
            <div class="flex gap-4 sm:flex-row flex-col">
              {
                recentProjectPosts.map((project) => {
                  return (
                    <a
                      href={`/projects/${project.id}/`}
                      class="sm:basis-1/2 shrink-0 p-1 border no-underline border-tertiary rounded-xl"
                    >
                      <figure>
                        <img
                          class="rounded-xl aspect-[4/3] object-cover"
                          src={project.data.heroImage}
                          alt={project.data.description}
                          width={1020}
                          height={500}
                        />
                      </figure>
                      <Stack class="gap-2 px-4 py-6">
                        <h3 class="font-medium">{project.data.title}</h3>
                        <p class="text-secondary">{project.data.excerpt}</p>
                      </Stack>
                    </a>
                  );
                })
              }
            </div>
          </div>
        </div>
      </section>
      <section>
        <h2 class="text-2xl font-medium mb-4">Career Milestones</h2>
        <WorkExperience />
      </section>
      <section>
        <h2 class="text-2xl font-medium mb-4">Beyond</h2>
        <div>
          <article>
            You can explore my projects here where I do expereiment with
            interfaces. I curate a lot of <a href="/tools">tools</a> to make my life
            easier.
          </article>
        </div>
      </section>
    </Stack>
    <Footer />
  </body>
</html>
