---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CustomProse from "./CustomProse.astro";
import Stack from "./Stack.astro";
import ButtonLink from "../components/ButtonLink.astro";

type Props = CollectionEntry<"projects">["data"];

const { title, description, heroImage, visitLink } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Header />
    <main class="text-secondary">
      <Stack class="gap-8">
        <div class="flex text-sm gap-1">
          <span>‚Üê</span>
          <a href="/projects" class="no-underline">Projects</a>
        </div>
        <Stack class="gap-2">
          <h1 class="text-primary text-3xl font-medium">{title}</h1>
          <p>
            {description}
          </p>
        </Stack>
        {
          heroImage && (
            <figure>
              <img
                width={1020}
                height={500}
                src={heroImage}
                class="w-full aspect-video object-cover object-top"
                alt={description}
              />
            </figure>
          )
        }
        <div class="text-center flex gap-4">
          <ButtonLink href={visitLink} class="px-4 py-2 text-primary"
            >Visit Project</ButtonLink
          >

          <ButtonLink href={visitLink} class="px-4 py-2 text-primary"
            >Visit Project</ButtonLink
          >
          <ButtonLink href={visitLink} class="px-4 py-2 text-primary"
            >Visit Project</ButtonLink
          >
        </div>
        <div>
          <CustomProse>
            <slot />
          </CustomProse>
        </div>
      </Stack>
    </main>
    <Footer />
  </body>
</html>
